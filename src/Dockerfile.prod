#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["src/WonderfullOffer.API/WonderfullOffer.API.csproj", "WonderfullOffer.API/"]
COPY ["src/Job/JobWork.csproj", "Job/"]
COPY ["src/WonderfullOffers.Domain.Contracts/WonderfullOffers.Domain.Contracts.csproj", "WonderfullOffers.Domain.Contracts/"]
COPY ["src/WonderfullOffers.Domain.Models/WonderfullOffers.Domain.Models.csproj", "WonderfullOffers.Domain.Models/"]
COPY ["src/WonderfullOffers.Infraestructure/WonderfullOffers.Infraestructure.csproj", "WonderfullOffers.Infraestructure/"]
COPY ["src/WonderfullOffer.Api.Models/WonderfullOffer.Api.Models.csproj", "WonderfullOffer.Api.Models/"]
COPY ["src/WonderfullOffers.Domain/WonderfullOffers.Domain.csproj", "WonderfullOffers.Domain/"]
COPY ["src/WonderfullOffers.Application/WonderfullOffers.Application.csproj", "WonderfullOffers.Application/"]
COPY ["src/WonderfullOffers.Application.Contracts/WonderfullOffers.Application.Contracts.csproj", "WonderfullOffers.Application.Contracts/"]
COPY ["src/WonderfullOffers.Application.Models/WonderfullOffers.Application.Models.csproj", "WonderfullOffers.Application.Models/"]
RUN dotnet restore "WonderfullOffer.API/WonderfullOffer.API.csproj"
COPY . .
WORKDIR "/src/WonderfullOffer.API"
RUN dotnet build "WonderfullOffer.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "WonderfullOffer.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENV ASPNETCORE_ENVIRONMENT=Production
ENTRYPOINT ["dotnet", "WonderfullOffer.API.dll"]